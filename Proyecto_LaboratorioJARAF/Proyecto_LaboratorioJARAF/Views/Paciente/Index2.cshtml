                        </li>



                    </ul>

                 

                
            </div>
        </nav>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>



        <h4 align="center" style="color:white">Lista de pacientes</h4>

        <div class="container">

            <table class="table table-bordered table-striped">
                <thead>
                <th>  Id          </th>
                <th>  nombre       </th>
                <th>  apellido      </th>
                <th>    edad        </th>
                <th>    Direccion    </th>
                <th>    Telefono   </th>

                </thead>


                <tbody>
                    @foreach (var ok in Model)
                    {
                        <tr style="color:black">
                            <td>@ok.IdPaciente</td>
                            <td>@ok.Nombre</td>
                            <td>@ok.Apellido</td>
                            <td>@ok.Edad</td>
                            <td>@ok.Direccion</td>
                            <td>@ok.telefono</td>


                            

                        </tr>
                    }
                </tbody>
            </table>

            <button>@Html.ActionLink("Agregar", "Create")</button>


        </div>


    </div>
</body>